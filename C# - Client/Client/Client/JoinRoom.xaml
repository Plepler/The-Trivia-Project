<Window x:Class="Client.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JoinRoom" Height="450" Width="800" FontFamily="Showcard Gothic" FontSize="16" Background="{x:Null}">
    <Grid Margin="0,0,-8,2.383">
        <ItemsControl x:Name="ic" Height="416.617" VerticalAlignment="Top" HorizontalAlignment="Left" Width="792">
            <ItemsControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF2F65DE" Offset="1"/>
                </LinearGradientBrush>
            </ItemsControl.Background>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding ButtonContent}" Click="JoinRoom_Click" FontFamily="Showcard Gothic" Background="White" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>