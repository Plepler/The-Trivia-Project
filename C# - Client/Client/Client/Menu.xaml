<Window x:Class="Client.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF2D65DE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="CreateRoomButton" Content="CREATE ROOM" HorizontalAlignment="Left" Height="61.017" Margin="280,31.115,0,0" VerticalAlignment="Top" Width="230.339" FontSize="24" Click="CreateRoom" Background="#FFF7F7F7" BorderBrush="White" FontFamily="Showcard Gothic">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.067"/>
                    <GradientStop Color="#FFC8CFE8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button x:Name="JoinRoomButton" Content="JOIN ROOM" HorizontalAlignment="Left" Height="61.017" Margin="280,106.115,0,0" VerticalAlignment="Top" Width="230.339" FontSize="24" Click="JoinRoom" Background="#FFF7F7F7" BorderBrush="White" FontFamily="Showcard Gothic">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.067"/>
                    <GradientStop Color="#FFC8CFE8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button x:Name="StatisticsButton" Content="STATISTICS" HorizontalAlignment="Left" Height="61.017" Margin="280,181.115,0,0" VerticalAlignment="Top" Width="230.339" FontSize="24" Click="Statistics" Background="#FFF7F7F7" BorderBrush="White" FontFamily="Showcard Gothic">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.067"/>
                    <GradientStop Color="#FFC8CFE8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button x:Name="CloseButton" Content="LOGOUT" HorizontalAlignment="Left" Height="33.56" Margin="690.068,358.932,0,0" VerticalAlignment="Top" Width="79.322" FontSize="16" Click="LogOut_Click" Background="#FFF7F7F7" BorderBrush="White" FontFamily="Showcard Gothic" Grid.ColumnSpan="2">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.067"/>
                    <GradientStop Color="#FFC8CFE8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button x:Name="LeaderboardButton" Content="LEADERBOARD" HorizontalAlignment="Left" Height="61.017" Margin="280,256.115,0,0" VerticalAlignment="Top" Width="230.339" FontSize="24" Click="Leaderboard" Background="#FFF7F7F7" BorderBrush="White" FontFamily="Showcard Gothic">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.067"/>
                    <GradientStop Color="#FFC8CFE8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button x:Name="HighscoresButton" Content="HIGHSCORES" HorizontalAlignment="Left" Height="61.017" Margin="280,331.475,0,0" VerticalAlignment="Top" Width="230.339" FontSize="24" Click="Highscores" Background="#FFF7F7F7" BorderBrush="White" FontFamily="Showcard Gothic">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.067"/>
                    <GradientStop Color="#FFC8CFE8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>

    </Grid>
</Window>
