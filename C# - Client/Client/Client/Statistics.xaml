<Window x:Class="Client.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="10,0,-10,0" Foreground="#FF2D65DE">
            <TextBlock x:Name="statsBlock" HorizontalAlignment="Center" Height="272.088" TextWrapping="Wrap" Width="752" FontSize="36" VerticalAlignment="Center" Margin="50,0,20,0" FontFamily="Showcard Gothic">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF2D65DE" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground><InlineUIContainer>
                    <TextBlock
        TextWrapping="Wrap"/>
                </InlineUIContainer></TextBlock>
        </ScrollViewer>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Height="40.793" Margin="666.551,368.207,0,0" VerticalAlignment="Top" Width="115.449" FontSize="22" Click="CloseWindow" FontFamily="Showcard Gothic" Foreground="Black"/>

    </Grid>
</Window>
